<%- include("./headers/login.ejs") %>

<div class="container col-2" id="login-form">
    <div class="form-group">
      <label for="user_name">Username</label>
      <input type="user" class="form-control" id="user_name" name="user_name" placeholder="Enter username">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
    </div>
    <% if (locals.darkmode) { %>
        <button onclick="login()" class="btn btn-secondary">Login</button>
    <% } else { %>
        <button onclick="login()" class="btn btn-dark">Login</button>
    <% } %>
    <div class="hidden" id="warning">
      <p class="alert alert-danger"></p>
    </div>
</div>

